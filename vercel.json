{
    "version": 2,
    "rewrites": [
        {
            "source": "/cnn-api/:path*",
            "destination": "/api/cnn.py"
        },
        {
            "source": "/detik/:path*",
            "destination": "/api/detik.py"
        },
        {
            "source": "/rss/:path*",
            "destination": "/api/rss.js"
        },
        {
            "source": "/cnn-detail/:path*",
            "destination": "/api/cnn.py"
        },
        {
            "source": "/detik-detail/:path*",
            "destination": "/api/detik.py"
        },
        {
            "source": "/api/search",
            "destination": "/api/gateway.js"
        },
        {
            "source": "/api/category/:name",
            "destination": "/api/gateway.js"
        },
        {
            "source": "/api/status-check",
            "destination": "/api/gateway.js"
        },
        {
            "source": "/berita-indo/:path*",
            "destination": "/api/gateway.js"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        }
    ]
}