{
    "version": 2,
    "builds": [
        {
            "src": "gateway/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "api-berita-indonesia/src/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "cnnindonesia-news-api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "detiknews_api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "berita-indo-api/package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": "/cnn-api/(.*)",
            "destination": "/cnnindonesia-news-api/main.py"
        },
        {
            "source": "/detik/(.*)",
            "destination": "/detiknews_api/main.py"
        },
        {
            "source": "/rss/(.*)",
            "destination": "/api-berita-indonesia/src/server.js"
        },
        {
            "source": "/berita-indo/(.*)",
            "destination": "/berita-indo-api/$1"
        },
        {
            "source": "/api/(.*)",
            "destination": "/gateway/server.js"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        }
    ]
}